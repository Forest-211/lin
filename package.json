        "packages/*"
    ],
    "devDependencies": {
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "lerna": "^5.5.2",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2"
    }
}
